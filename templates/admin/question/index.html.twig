{% extends 'admin/base.html.twig' %}

{% block title %}Index des questions{% endblock %}

{% block body %}
    <h1 class="text-center mb-4">Index des questions</h1>
        {# total items count #}
    <div class="count">
      <p>Nombre de résultat trouvé : {{ pagination.getTotalItemCount }}</p>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th class="table-dark">Questions</th>
                <th class="table-dark">Niveau</th>
                <th class="table-dark">actions</th>
                {# <th>{{ knp_pagination_sortable(pagination, 'Id', 'q.id') }}</th>
                <th{% if pagination.isSorted('q.Question') %} class="sorted"{% endif %}>
                    {{ knp_pagination_sortable(pagination, 'Question', 'q.question') }}
                </th> #}
            </tr>
        </thead>
        <tbody>
        {% for question in pagination %}
            <tr {% if loop.index is odd %}class="color"{% endif %}>
                <td>{{ question.question|raw }}</td>
                <td>{{ question.level }}</td>
                <td>
                    <a class="btn btn-outline-primary" href="{{ path('admin_question_show', {'id': question.id}) }}"><i class="bi bi-eye"></i> afficher</a>
                    <a class="btn btn-outline-primary" href="{{ path('admin_question_edit', {'id': question.id}) }}"><i class="bi bi-pencil"></i> éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">aucune question trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# display navigation #}
    <div class="navigation ">
        {{ knp_pagination_render(pagination) }}
    </div>
    <a class="btn btn-outline-primary mt-2" href="{{ path('admin_question_new') }}"><i class="bi bi-plus-circle"></i> Créer</a>
{% endblock %}
