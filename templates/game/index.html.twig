{% extends 'base.html.twig' %}

{% block title %}Partie de jeu d'histoire
{% endblock %}
{% block body %}

	<div class="board mt-5">
		<div class="bg-image"></div>


		<form action="{{ path('game_new')}}" method="POST" id="form-duration" class="container-fluid d-flex flex-column justify-content-center align-items-center h-100">
			<label for="duration" class=" fs-3 p-2 bg-white bg-opacity-75 mb-2 shadow-sm">
				Choisir une durée de partie en minute (max 60)
			</label>
			<input class="p-3 border-0 mt-3 shadow-sm text-center " type="number" id="duration" name="duration" min="0" max="60" value="45">
			<div class="mb-3">
				<label for="name" class="form-label"></label>
				<input ype="text" name="name" id="name" class="form-control" placeholder="Nom de la partie">
			</div>
			<div class=" fs-5 m-5 text-center ">
				<div class="form-check">
					<input class="form-check-input" type="radio" name="choice" id="mdj" value="mdj" checked>
					<label class="form-check-label fw-bold" for="mdj">Partie coopérative avec Maître du Jeu
					</label>
				</div>

				<div class="form-check">
					<input class="form-check-input" type="radio" name="choice" id="qcm" value="qcm">
					<label class="form-check-label fw-bold" for="qcm">Partie Solo en QCM
					</label>
				</div>
			</div>
			<button type="submit" class="btn btn-one mt-5 bg-primary bg-opacity-75 mb-2 shadow-sm" form="form-duration" value="Submit">Lancer la partie</button>
		</form>


	</div>
{% endblock %}
